      "@/components/*" : ["./src/component/*"],
      "@/interfaces/*" : ["./src/interface/*"],
      "@/layouts/*" : ["./src/layout/*"],
      "@/pages/*" : ["./src/page/*"],
      "@/styles/*" : ["./src/styles/*"],
      "@/types/*" : ["./src/type/*"],
      "@/utilities/*" : ["./src/utility/*"]
